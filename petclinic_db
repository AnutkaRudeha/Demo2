FROM mariadb:latest

ENV MYSQL_USER=$DBUSER
ENV MYSQL_PASS=$DBPASSWD
ENV MYSQL_IP=$DBHOST
ENV MYSQL_NAME=$DBNAME
ENV MYSQL_URL=jdbc:mysql://$DBHOST:3306/$DBNAME

